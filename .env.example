# =============================================================================
# Igor Assistant - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_ENV=production
LOG_LEVEL=INFO
DEBUG=false
SECRET_KEY=your-super-secret-key-change-this-in-production

# -----------------------------------------------------------------------------
# Supabase Configuration
# -----------------------------------------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# Frontend Supabase (for Vite)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
VITE_API_URL=http://localhost:8090

# -----------------------------------------------------------------------------
# Google OAuth Configuration
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8090/api/v1/auth/google/callback

# Google OAuth Scopes (comma-separated)
GOOGLE_SCOPES=https://www.googleapis.com/auth/calendar,https://www.googleapis.com/auth/gmail.readonly,https://www.googleapis.com/auth/gmail.send,https://www.googleapis.com/auth/drive

# -----------------------------------------------------------------------------
# Telegram Bot Configuration
# -----------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN=your-bot-token-from-botfather
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram
TELEGRAM_ADMIN_CHAT_ID=your-chat-id

# -----------------------------------------------------------------------------
# Gemini AI Configuration
# -----------------------------------------------------------------------------
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.5-flash

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-domain.com

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_AI_PER_MINUTE=20

# -----------------------------------------------------------------------------
# Email Configuration (optional - for notifications)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=Igor Assistant <igor@your-domain.com>

# -----------------------------------------------------------------------------
# Monitoring (optional)
# -----------------------------------------------------------------------------
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# -----------------------------------------------------------------------------
# Traefik/SSL (for production with HTTPS)
# -----------------------------------------------------------------------------
DOMAIN=your-domain.com
ACME_EMAIL=admin@your-domain.com

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FEATURE_AUTONOMY_ENABLED=true
FEATURE_FINANCE_ENABLED=true
FEATURE_HEALTH_TRACKING_ENABLED=true
FEATURE_AI_INSIGHTS_ENABLED=true
